    public void init() {
        lbHinhAnh.setToolTipText("");
        filltable();
    }

    public void filltable() {
        list = repo.getListStudents();
        defaultTableModel = (DefaultTableModel) tablSV.getModel();
        defaultTableModel.setRowCount(0);
        for (Student student : list) {
            defaultTableModel.addRow(student.toRow());
        }
    }

    public Student readFrom() {
        Student st = new Student();
        st.setMaSV(txtMaSV.getText());
        st.setHoTen(txtHoTen.getText());
        st.setEmail(txtEmail.getText());
        st.setSDT(txtSoDT.getText());
        if (rdoNam.isSelected()) {
            st.setGioiTinh(1);
        }
        if (rdoNu.isSelected()) {
            st.setGioiTinh(0);
        }

        st.setDiaChi(txtDiaChi.getText());

        st.setHinhAnh(path);
        
        
        return st;
    }
    
    public void fillFrom(Student st){
        txtMaSV.setText(st.getMaSV());
        txtHoTen.setText(st.getHoTen());
        txtEmail.setText(st.getEmail());
        txtSoDT.setText(st.getSDT());
        txtDiaChi.setText(st.getDiaChi());
        if (st.getGioiTinh()== 0) {
            rdoNu.setSelected(true);
        }
        if (st.getGioiTinh()== 1) {
            rdoNam.setSelected(true);
        }
        
        path = st.getHinhAnh();
        ImageIcon img =new ImageIcon(st.getHinhAnh());
        lbHinhAnh.setIcon(img);
    }

