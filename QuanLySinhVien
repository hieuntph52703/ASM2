    private void butNewActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        txtMaSV.setText("");
        txtHoTen.setText("");
        txtEmail.setText("");
        txtSoDT.setText("");
        txtDiaChi.setText("");
        btgGioiTinh.clearSelection();
        lbHinhAnh.setToolTipText("thêm hình ảnh");
    }                                      

    private void butSaveActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        if ((repo.SaveStudent(readFrom()) != 0)) {
            JOptionPane.showConfirmDialog(this, "Thêm thành công");
            filltable();
        } else {
            JOptionPane.showConfirmDialog(this, "Thêm thất bại");
        }
      
    }                                       

    private void lbHinhAnhMouseClicked(java.awt.event.MouseEvent evt) {                                       
        // TODO add your handling code here:
        JFileChooser chooser = new JFileChooser();
        int kq = chooser.showOpenDialog(null);
        if (kq == JFileChooser.APPROVE_OPTION) {
            String path = chooser.getSelectedFile().getPath();
            ImageIcon imgIcon = new ImageIcon(path);
            Image img = imgIcon.getImage();
            Image scaledImg = img.getScaledInstance(lbHinhAnh.getWidth(), lbHinhAnh.getHeight(), Image.SCALE_SMOOTH);
            ImageIcon icon = new ImageIcon(scaledImg);
            lbHinhAnh.setIcon(icon);
        }
    }                                      

    private void butDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        if (repo.DeleteStudent(readFrom()) != 0) {
            JOptionPane.showConfirmDialog(this, "Delete Thành công");
            filltable();
        }else {
            JOptionPane.showConfirmDialog(this, "Delete Thất Bại");
        }
    }                                         

    private void butUpdateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        if (repo.UpdateStudent(readFrom()) != 0) {
            JOptionPane.showConfirmDialog(this, "Update Thành công");
            filltable();
        }else {
            JOptionPane.showConfirmDialog(this, "Update Thất Bại");
        }
    }                                         

    private void tablSVMouseClicked(java.awt.event.MouseEvent evt) {                                    
        // TODO add your handling code here:
        int index = tablSV.getSelectedRow();
        fillFrom(list.get(index));
    }                                   

